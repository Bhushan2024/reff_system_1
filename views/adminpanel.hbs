<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>Reff_System - Withdraw</title>
    <link rel="stylesheet" href="/css/styles3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <div class="containerh">
            <h1>Reff_System</h1>
            <nav>
                <ul>
                    <li><a href="/adminlogout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="main-content">
            <h1>Admin Panel</h1>
            <form action="/auth/adminpanel" method="post">
                <div>
                    <label for="status">Filter by Status:</label>
                    <select id="status" name="status">
                        <option value="all">All</option>
                        <option value="pending">Pending</option>
                        <option value="approved">Approved</option>
                        <option value="rejected">Rejected</option>
                    </select>
                </div>
                <br />
                <div>
                    <label>Select Date:</label>
                    <label for="status">From:</label>
                    <input type="date" id="startDate" name="start_date">
                    <label for="status"> To:</label>
                    <input type="date" id="endDate" name="end_date">
                </div>
                <div class="button input-boxx">
                    <input type="submit" value="Show Request">
                </div>
            </form>
            <br />
            <table id="example" class="table-width">
                {{#if data}}
                <h2>Withdraw Request List</h2>
                
                
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User Email</th>
                        <th>Wallet Amount</th>
                        <th>Amount</th>
                        <th>Account Number</th>
                        <th>IFSC Code</th>
                        <th>Status</th>
                        <th>Data Update</th>
                        <th>Change Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.amount_avl}}</td>
                        <td>{{this.amount}}</td>
                        <td>{{this.acc_no}}</td>
                        <td>{{this.ifsc}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <form action="/auth/updatedata" method="post">
                                <input type="hidden" name="withdrawId" value="{{this.id}}">
                                <input type="hidden" name="amount" value="{{this.amount}}">
                                <input type="hidden" name="actual_amount" value="{{this.amount_avl}}">
                                <input type="hidden" name="email" value="{{this.email}}">
                                <button type="submit">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form action="/auth/updateStatus" method="post">
                                <input type="hidden" name="withdrawId" value="{{this.id}}">
                                <input type="hidden" name="amount" value="{{this.amount}}">
                                <input type="hidden" name="actual_amount" value="{{this.amount_avl}}">
                                <input type="hidden" name="email" value="{{this.email}}">
                                <select name="status">
                                    <option value="pending">Select Status</option>
                                    <option value="pending">Pending</option>
                                    <option value="approved">Approved</option>
                                    <option value="rejected">Rejected</option>
                                </select>
                        </td>
                        <td>
                            <button type="submit">Update</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            
            <div class="pagination">
                <button id="prevPage">Previous</button>
                <span id="currentPage">Page 1</span>
                <button id="nextPage">Next</button>
            </div>
            {{/if}}
            <br/>
            <br/><br/><br/><br/><br/>

        </div>
    </div>

    <script>
        const tableRows = document.querySelectorAll('.table-width tbody tr');
        const itemsPerPage = 5;
        let currentPage = 1;

        const updateTableDisplay = () => {
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;

            tableRows.forEach((row, index) => {
                if (index >= startIndex && index < endIndex) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('currentPage').textContent = `Page ${currentPage}`;
        };

        document.getElementById('prevPage').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                updateTableDisplay();
            }
        });

        document.getElementById('nextPage').addEventListener('click', () => {
            const maxPage = Math.ceil(tableRows.length / itemsPerPage);
            if (currentPage < maxPage) {
                currentPage++;
                updateTableDisplay();
            }
        });

        updateTableDisplay();
    </script>

